<div id="mtn-image" class="bg-grey mb-4 w-100 text-center">
    <img src="/payment/gateway/mtnafrica/pix/img.png" title="{{#str}} plugin, paygw_mtnafrica {{/str}}" alt="{{#str}} plugin, paygw_mtnafrica {{/str}}">
</div>
<div class="mb-4 w-100 text-center font-italic">{{#str}} mtnstart, paygw_mtnafrica {{/str}}</div>
<div id="mtn-spinner" class="text-center mb-4 w-100 row">
    <span style="margin: auto;">{{#pix}} i/ajaxloader, core, Working {{/pix}}</span>
</div>
<div class="text-center">
    <input type="submit" value="{{#str}} proceed, moodle {{/str}}" id="mtn-pay" class="mtn-pay btn btn-primary" data-for="enablepay" disabled>
    <input type="submit" value="{{#str}} cancel, moodle {{/str}}" id="mtn-cancel" class="mtn-pay btn btn-secondary" data-for="enablepay">
</div>
<div id="mtn-progress" class="mt-4 mb-4 w-100 row">
    <div class="text-center w-100">
        <p id="mtn-progress_status" class="text-xs-center"></p>
        <progress id="mtn-progress_bar" class="progress progress-striped progress-animated w-75" style="margin: auto auto;" value="0" max="100"></progress>
        <p id="mtn-progress_estimate" class="text-xs-center"></p>
    </div>
</div>
<div id="mtn-out" class="bg-grey rounded mt-4 mb-4 w-100 text-center"></div>
